{
  "name": "tosguardian",
  "packageManager": "yarn@4.4.1",
  "dependencies": {
    "buffer": "^6.0.3",
    "chai": "^5.1.2",
    "cheerio": "^1.0.0",
    "ci-info": "^4.0.0",
    "compromise": "^14.14.0",
    "mammoth": "^1.8.0",
    "node-fetch": "^3.3.2",
    "path-browserify": "^1.0.1",
    "pdfjs-dist": "^4.7.76",
    "sinon": "^19.0.2",
    "stream-browserify": "^3.0.0"
  },
  "version": "1.0.0",
  "description": "Terms Guardian is a web browser extension designed to empower users by demystifying the complex language often found in Terms of Service (ToS) agreements. It automatically detects ToS text on websites, grades its readability, summarizes its content into plain language, and assesses the rights retained or surrendered.",
  "main": "background.js",
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@babel/register": "^7.25.9",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc":"^48.2.0",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^25.0.1",
    "json-loader": "^0.5.7",
    "mocha": "^10.7.3",
    "node-util": "^0.0.1",
    "nyc": "^17.1.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^4.0.0",
    "util": "^0.12.5",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build:libs": "node scripts/build-libs.js",
    "build": "yarn build:libs && webpack --config config/webpack.config.js",
    "build:prod": "yarn build:libs && NODE_ENV=production webpack --config config/webpack.config.js",
    "clean": "rimraf dist src/lib",
    "docs": "node scripts/generate-docs.js",
    "docs:watch": "nodemon scripts/generate-docs.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,jsx,json,css,html}",
    "format:check": "prettier --check src/**/*.{js,jsx,json,css,html}",
    "test": "nyc jest",
    "test:watch": "jest --watch",
    "test:coverage": "nyc jest --coverage",
    "watch": "webpack --config config/webpack.config.js --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
