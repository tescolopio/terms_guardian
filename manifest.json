{
  "name": "Terms Guardian - Side Panel",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Empowers users by demystifying Terms of Service agreements.",
  "author": "Timmothy Escolopio",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "sidePanel", 
    "contextMenus", 
    "notifications",
    "storage",
    "webRequest",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/lib/cheerio.min.js",
        "src/lib/compromise.min.js",
        "src/utils/debugger.js",
        "src/utils/constants.js",
        "src/utils/utilities.js",
        "src/analysis/readabilityGrader.js",
        "src/analysis/textExtractor.js",
        "src/analysis/rightsAssessor.js",
        "src/analysis/uncommonWordsIdentifier.js",
        "src/analysis/summarizeTos.js",
        "src/content/content.js"
      ],
      "css": ["src/styles/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/panel/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/data/*.js",
        "src/data/dictionaries/*.json",
        "src/panel/sidepanel.html",
        "src/styles/*.css",
        "src/lib/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}